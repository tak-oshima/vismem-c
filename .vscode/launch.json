    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Generate Conversations (vismem-c)",
            "type": "debugpy",
            "request": "launch",
            "python": "/opt/homebrew/Caskroom/miniconda/base/envs/vismem-c/bin/python",
            "program": "${workspaceFolder}/generative_agents/generate_conversations.py",
            "cwd": "${workspaceFolder}",
            "args": [
                "--out-dir",
                "/Users/takeyuki/src/tak-oshima/vismem-c/data/multimodal_dialog/example",
                "--prompt-dir",
                "/Users/takeyuki/src/tak-oshima/vismem-c/prompts",
                "--num-sessions",
                "2",
                "--max-turns-per-session",
                "4",
                "--num-days",
                "3",
                "--session",
                "--summary",
                "--events",
                "--num-events",
                "2",
                "--num-events-per-session",
                "1"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}